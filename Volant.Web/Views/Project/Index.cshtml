@model IEnumerable<Volant.Web.ViewModel.ProjectViewModel>

@{
    ViewBag.Title = "Projects";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Project list</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("_Navigation", "Shared")">Home</a>
            </li>
            <li class="active">
                <strong>Project list</strong>
            </li>
        </ol>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInUp">

            <div class="ibox">
                <div class="ibox-title">
                    <h5>Heading</h5>
                    <div class="ibox-tools">
                        <a href="@Url.Action("Create", "Project")" class="btn btn-primary btn-xs">Create new project</a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row m-b-sm m-t-sm">
                        <div class="col-md-1">
                            <button type="button" id="loading-example-btn" class="btn btn-white btn-sm"><i class="fa fa-refresh"></i> Refresh</button>
                        </div>
                        <div class="col-md-11">
                            <div class="input-group">
                                <input type="text" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                    <button type="button" class="btn btn-sm btn-primary"> Go!</button>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="project-list">

                        <table class="table table-hover">
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="project-status">
                                            <span class="label label-primary">@Html.DisplayFor(modelItem => item.projectStatusName)</span>

                                        </td>
                                        <td class="project-title">
                                            <a href="@Url.Action("Details", "Project")">@Html.DisplayFor(modelItem => item.name)</a>
                                            <br />
                                            <small>Deadline @Html.DisplayFor(modelItem => item.endDate)</small>
                                        </td>
                                        <td class="project-completion">
                                            @Html.DisplayFor(modelItem => item.description)
                                        </td>
                                        <td class="project-completion">
                                            <small>Completion with: @Html.DisplayFor(modelItem => item.progress)%</small>
                                            <div class="progress progress-mini">
                                                <div style="width: @Html.DisplayFor(modelItem => item.progress)%;" class="progress-bar"></div>
                                            </div>
                                        </td>

                                        <td class="project-completion">
                                            @Html.DisplayFor(modelItem => item.customerName)
                                        </td>

                                        <td class="project-completion">
                                            <a href="@Url.Action("Index", "Job", new { projectId = item.projectId })" >  # of Jobs: @Html.DisplayFor(modelItem => item.countOfJobs) </a>
                                        </td>

                                        <td class="project-completion">
                                            <a href="@Url.Action("Details", "Project", new { id = item.projectId })" class="btn btn-white btn-sm"><i class="fa fa-gears"></i> SIM </a>
                                        </td>

                                        <td class="project-actions">
                                            <a href="@Url.Action("Details", "Project", new { id = item.projectId })" class="btn btn-white btn-sm"><i class="fa fa-folder"></i> View </a>
                                            <a href="@Url.Action("Edit", "Project", new { id = item.projectId })" class="btn btn-white btn-sm"><i class="fa fa-pencil"></i> Edit </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>